{
  "name": "astrisjs",
  "version": "0.0.0",
  "description": "Build powerful applications. The star of your Discord stack.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/astrisjs/astris.js.git"
  },
  "license": "Apache-2.0",
  "browser": "browser.js",
  "keywords": [
    "napi-rs",
    "NAPI",
    "N-API",
    "Rust",
    "node-addon",
    "node-addon-api",
    "discord",
    "discordjs",
    "framework",
    "bot",
    "typescript",
    "astris"
  ],
  "files": [
    "index.d.ts",
    "index.js",
    "browser.js"
  ],
  "napi": {
    "binaryName": "astrisjs",
    "targets": [
      "x86_64-pc-windows-msvc",
      "x86_64-apple-darwin",
      "x86_64-unknown-linux-gnu",
      "aarch64-apple-darwin"
    ]
  },
  "engines": {
    "node": ">= 6.14.2 < 7 || >= 8.11.2 < 9 || >= 9.11.0 < 10 || >= 10.0.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "scripts": {
    "artifacts": "napi artifacts",
    "bench": "bun run benchmark/bench.ts",
    "build": "napi build --platform --release",
    "build:debug": "napi build --platform",
    "format": "run-p format:js format:rs format:toml",
    "format:js": "biome format . --write",
    "format:toml": "taplo format",
    "format:rs": "cargo fmt",
    "lint": "biome lint .",
    "prepublishOnly": "napi prepublish -t npm",
    "preversion": "napi build --platform && git add .",
    "version": "napi version",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@emnapi/core": "^1.5.0",
    "@emnapi/runtime": "^1.5.0",
    "@napi-rs/cli": "^3.2.0",
    "@taplo/cli": "^0.7.0",
    "@tybys/wasm-util": "^0.10.0",
    "@types/bun": "^1.3.6",
    "chalk": "^5.6.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "mitata": "^1.0.34",
    "npm-run-all2": "^8.0.4",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "*.@(js|ts|tsx)": [
      "biome check --write ."
    ],
    "*.toml": [
      "taplo format"
    ],
    "*.rs": [
      "cargo fmt"
    ]
  },
  "packageManager": "bun@1.3.5",
  "optionalDependencies": {
    "astrisjs-win32-x64-msvc": "1.0.0",
    "astrisjs-darwin-x64": "1.0.0",
    "astrisjs-linux-x64-gnu": "1.0.0",
    "astrisjs-darwin-arm64": "1.0.0"
  }
}
